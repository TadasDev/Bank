<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}InvestmentPro Dashboard{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles.css') }}"> <!-- External Stylesheet -->
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>

<body class="d-flex flex-column vh-100">
    <div class="flex-grow-1">
        {% block navbar %}
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">InvestmentPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    {% if app.user %}
                    <div class="d-flex align-items-center">
                        <img src="{{ asset('profile-placeholder.jpg') }}" alt="Profile Picture" class="profile-picture">
                        <span class="navbar-text me-3">Hello, {{ app.user.getFirstName }}</span>
                        <form action="{{ path('app_security_logout') }}" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-outline-success btn-sm">Logout</button>
                        </form>
                    </div>
                    {% else %}
                    <a class="btn btn-outline-success btn-sm me-2" href="{{ path('app_security_login') }}">Login</a>
                    <a class="btn btn-outline-success btn-sm" href="{{ path('app_security_register') }}">Register</a>
                    {% endif %}
                </div>
            </div>
        </nav>
        {% endblock %}

        <!-- Sidebar and Main Content Layout -->
        <div class="container-fluid mt-5">
            <div class="row">
                <!-- Sidebar (Fixed on the left) -->
                {% if app.user %}
                <div class="col-md-3 col-lg-2 position-fixed bg-dark text-white p-3 sidebar" style="top: 60px; left: 0; height: calc(100vh - 60px);">
                    <ul class="nav flex-column">
                        <!-- Dashboard Item (always active after login) -->
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <span class="nav-icon">üè†</span> Dashboard
                            </a>
                        </li>
                        <!-- Accounts Menu -->
                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-toggle="collapse" href="#accountsSubmenu" role="button" aria-expanded="false" aria-controls="accountsSubmenu">
                                <span class="nav-icon">üíº</span> Accounts <span class="collapse-icon">‚ñº</span>
                            </a>
                            <div class="collapse" id="accountsSubmenu">
                                <ul class="nav flex-column ps-4">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Savings Account</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Investment Account</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <!-- Projects Menu -->
                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-toggle="collapse" href="#projectsSubmenu" role="button" aria-expanded="false" aria-controls="projectsSubmenu">
                                <span class="nav-icon">üìä</span> Projects <span class="collapse-icon">‚ñº</span>
                            </a>
                            <div class="collapse" id="projectsSubmenu">
                                <ul class="nav flex-column ps-4">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">My Investments</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">In Progress Projects</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_investment') }}">Recently Added Projects</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <!-- Settings Menu -->
                        <li class="nav-item">
                            <a class="nav-link collapsed" data-bs-toggle="collapse" href="#settingsSubmenu" role="button" aria-expanded="false" aria-controls="settingsSubmenu">
                                <span class="nav-icon">‚öôÔ∏è</span> Settings <span class="collapse-icon">‚ñº</span>
                            </a>
                            <div class="collapse" id="settingsSubmenu">
                                <ul class="nav flex-column ps-4">
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Profile Settings</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Notification Settings</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
                {% else %}
                <!-- Empty sidebar for non-logged-in users (no space taken) -->
                <div class="col-0 d-none d-md-block"></div>
                {% endif %}

                <!-- Main Content Area -->
                <div class="col-md-9 col-lg-10 ms-auto" style="padding-top: 60px; {% if not app.user %} margin-left: 0; {% else %} margin-left: 250px; {% endif %}">
                    <div class="content">
                        {% block body %}
                        <!-- Content goes here -->
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer -->
    {% block footer %}
    <footer class="text-center text-black py-4 mt-auto">
        <p>InvestmentPro platform powered by <a href="https://getbootstrap.com/" class="text-black">Bootstrap</a> and developed by <a href="https://twitter.com/mdo" class="text-black">@TLabPro</a>.</p>
    </footer>
    {% endblock %}

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
