<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}InvestmentPro Dashboard{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles.css') }}"> <!-- External Stylesheet -->
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>

<body class="d-flex flex-column vh-100">
    <div class="flex-grow-1">
        {% block navbar %}
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}">InvestmentPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    {% if app.user %}
                    <div class="d-flex align-items-center">
                        <img src="{{ asset('profile-placeholder.jpg') }}" alt="Profile Picture" class="profile-picture">
                        <span class="navbar-text me-3">Hello, {{ app.user.getFirstName }}</span>
                        <form action="{{ path('app_security_logout') }}" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-outline-success btn-sm">Logout</button>
                        </form>
                    </div>
                    {% else %}
                    <a class="btn btn-outline-success btn-sm me-2" href="{{ path('app_security_login') }}">Login</a>
                    <a class="btn btn-outline-success btn-sm" href="{{ path('app_security_register') }}">Register</a>
                    {% endif %}
                </div>
            </div>
        </nav>
        {% endblock %}

        <!-- Sidebar and Main Content Layout -->
        <div class="container-fluid mt-5">
            <div class="row">
            
<!-- Sidebar (Fixed on the left for logged-in users, using Bootstrap collapse classes) -->
{% if app.user %}
<div class="bg-dark text-white p-3 sidebar" style="position: fixed; top: 60px; left: 0; height: calc(100vh - 60px); width: 280px; overflow-y: auto;">
    <ul class="list-unstyled ps-0">
        <!-- Dashboard Menu -->
        <li class="mb-1">
            <button class="btn btn-toggle align-items-center rounded text-white w-100 text-start" data-bs-toggle="collapse" data-bs-target="#dashboardMenu" aria-expanded="true">
                <i class="bi bi-house-fill me-2"></i> Dashboard
            </button>
            <div class="collapse show" id="dashboardMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                    <li><a href="{{ path('app_dashboard') }}" class="link-light rounded">Overview</a></li>
                    <li><a href="#" class="m-4 link-light rounded">Updates</a></li>
                    <li><a href="#" class="link-light rounded">Reports</a></li>
                </ul>
            </div>
        </li>

        <!-- Accounts Menu -->
        <li class="mb-1">
            <button class="btn btn-toggle align-items-center rounded text-white w-100 text-start" data-bs-toggle="collapse" data-bs-target="#accountsMenu" aria-expanded="false">
                <i class="bi bi-briefcase-fill me-2"></i> Accounts
            </button>
            <div class="collapse" id="accountsMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                    <li><a href="#" class="link-light rounded">Savings Account</a></li>
                    <li><a href="#" class="link-light rounded">Investment Account</a></li>
                </ul>
            </div>
        </li>

        <!-- Projects Menu -->
        <li class="mb-1">
            <button class="btn btn-toggle align-items-center rounded text-white w-100 text-start" data-bs-toggle="collapse" data-bs-target="#projectsMenu" aria-expanded="false">
                <i class="bi bi-bar-chart-fill me-2"></i> Projects
            </button>
            <div class="collapse" id="projectsMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                    <li><a href="#" class="link-light rounded">My Investments</a></li>
                    <li><a href="#" class="link-light rounded">In Progress Projects</a></li>
                    <li><a href="{{ path('app_investment') }}" class="link-light rounded">Recently Added Projects</a></li>
                </ul>
            </div>
        </li>

        <!-- Settings Menu -->
        <li class="mb-1">
            <button class="btn btn-toggle align-items-center rounded text-white w-100 text-start" data-bs-toggle="collapse" data-bs-target="#settingsMenu" aria-expanded="false">
                <i class="bi bi-gear-fill me-2"></i> Settings
            </button>
            <div class="collapse" id="settingsMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                    <li><a href="#" class="link-light rounded">Profile Settings</a></li>
                    <li><a href="#" class="link-light rounded">Notification Settings</a></li>
                </ul>
            </div>
        </li>
    </ul>
</div>
{% else %}
<!-- No sidebar for non-logged-in users -->
<div class="d-none"></div>
{% endif %}




                <!-- Main Content Area -->
                <div class="col-md-9 col-lg-10 m-auto" style="padding-top: 60px; {% if not app.user %} margin-left: 0; {% else %} margin-left: 250px; {% endif %}">
                    <div class="content">
                        {% block body %}
                        <!-- Content goes here -->
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer -->
    {% block footer %}
    <footer class="text-center text-black py-4 mt-auto">
        <p>InvestmentPro platform powered by <a href="https://getbootstrap.com/" class="text-black">Bootstrap</a> and developed by <a href="https://twitter.com/mdo" class="text-black">@TLabPro</a>.</p>
    </footer>
    {% endblock %}

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
