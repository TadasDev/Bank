<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Invest-a-lot Dashboard{% endblock %}</title>

    <!-- External CSS and Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles.css') }}"> <!-- External Stylesheet -->
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <style>
        /* Ensure body and html are full height */
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Apply the primary fonts */
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            flex-direction: column;
            background-color: #fff; /* Optional: Set body background color */
        }

        h1, h2, h3 {
            font-family: 'Lora', serif;
        }

        /* Flexbox layout for body to ensure footer stays at the bottom */
        .content {
            flex-grow: 1;
        }

        /* Footer stays at the bottom */
        footer {
            margin-top: auto;
            padding: 20px 0;
            background-color: #f8f9fa;
            text-align: center;
            font-size: 14px;
            color: #666;
        }

        /* Navbar - Ensure fixed navbar appears on top */
        .navbar {
            z-index: 1051; /* Slightly higher z-index to ensure it's above other content */
        }

        /* Prevent overlap of content with fixed navbar */
        main {
            padding-top: var(--navbar-height, 80px); /* Use a CSS variable for the navbar height */
        }

        /* Sidebar Styling */
        .sidebar {
            position: fixed;
            top: 80px; /* Space below the navbar */
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            transition: all 0.3s ease;
        }

        .sidebar .nav-item {
            padding-left: 20px;
        }

        .sidebar .nav-link {
            color: white;
            padding: 10px;
            text-decoration: none;
            border-radius: 4px;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
        }

        .sidebar .submenu {
            display: none;
            padding-left: 20px;
        }

        .sidebar .submenu li a {
            color: #ccc;
        }

        .sidebar .submenu li a:hover {
            color: white;
        }

        .sidebar .submenu.show {
            display: block;
        }

        /* Active State for Menu Items */
        .sidebar .nav-link.active {
            background-color: #007bff;
        }

        /* Responsive adjustments */
        @media (max-width: 767px) {
            .sidebar {
                width: 200px;
            }
        }

    </style>
</head>

<body>
    <!-- Top Navbar -->
    {% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Invest-a-lot</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                {% if app.user %}
                <div class="d-flex align-items-center">
                    <img src="{{ asset('profile-placeholder.jpg') }}" alt="Profile Picture" class="profile-picture">
                    <span class="navbar-text me-3">Hello, {{ app.user.getFirstName }}</span>
                    <form action="{{ path('app_security_logout') }}" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-outline-success btn-sm">Logout</button>
                    </form>
                </div>
                {% else %}
                <a class="btn btn-outline-success btn-sm me-2" href="{{ path('app_security_login') }}">Login</a>
                <a class="btn btn-outline-success btn-sm" href="{{ path('app_security_register') }}">Register</a>
                {% endif %}
            </div>
        </div>
    </nav>
    {% endblock %}

    <!-- Sidebar for authenticated users -->
    {% if app.user %}
    <div class="sidebar" id="sidebarMenu">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#" onclick="setActive(this);">
                    <span class="nav-icon">üè†</span><span class="nav-link-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link submenu-toggle collapsed" href="#accountsSubmenu" onclick="toggleSubmenu(this); setActive(this);">
                    <span class="nav-icon">üíº</span><span class="nav-link-text">Accounts</span>
                    <span class="collapse-icon">‚ñº</span>
                </a>
                <ul class="submenu" id="accountsSubmenu">
                    <li><a class="nav-link" href="#" onclick="setSubmenuActive(this);">Savings Account</a></li>
                    <li><a class="nav-link" href="#" onclick="setSubmenuActive(this);">Investment Account</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link submenu-toggle collapsed" href="#projectsSubmenu" onclick="toggleSubmenu(this); setActive(this);">
                    <span class="nav-icon">üìä</span>
                    <span class="nav-link-text">Projects</span>
                    <span class="collapse-icon">‚ñº</span>
                </a>
                <ul class="submenu" id="projectsSubmenu">
                    <li><a class="nav-link" href="{{ path('app_investment') }}" onclick="setSubmenuActive(this);">My Investments</a></li>
                    <li><a class="nav-link" href="#" onclick="setSubmenuActive(this);">In Progress Projects</a></li>
                    <li><a class="nav-link" href="#" onclick="setSubmenuActive(this);">Recently Added Projects</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link submenu-toggle collapsed" href="#settingsSubmenu" onclick="toggleSubmenu(this); setActive(this);">
                    <span class="nav-icon">‚öôÔ∏è</span><span class="nav-link-text">Settings</span>
                    <span class="collapse-icon">‚ñº</span>
                </a>
                <ul class="submenu" id="settingsSubmenu">
                    <li><a class="nav-link" href="#" onclick="setSubmenuActive(this);">Profile Settings</a></li>
                    <li><a class="nav-link" href="#" onclick="setSubmenuActive(this);">Notification Settings</a></li>
                </ul>
            </li>
        </ul>
    </div>
    {% endif %}

    <!-- Main Content -->
    <div class="content">
        <div class="container-fluid">
            {% block body %}{% endblock %}
        </div>
    </div>

    <!-- Footer -->
    {% block footer %}
    <footer class="text-center text-black py-4">
        <p>InvestmentPro platform powered by <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a> and developed by <a href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
    </footer>
    {% endblock %}

    <!-- JavaScript (Bootstrap Bundle) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript for Sidebar -->
    <script>
        // Toggle submenu visibility
        function toggleSubmenu(link) {
            var submenu = link.nextElementSibling;
            var icon = link.querySelector('.collapse-icon');
            if (submenu.style.display === "block") {
                submenu.style.display = "none";
                icon.textContent = '‚ñº';
            } else {
                submenu.style.display = "block";
                icon.textContent = '‚ñ≤';
            }
        }

        // Set active state for the clicked menu item
        function setActive(link) {
            var links = document.querySelectorAll('.nav-link');
            links.forEach(function (el) {
                el.classList.remove('active');
            });
            link.classList.add('active');
        }

        // Set active state for submenu items
        function setSubmenuActive(link) {
            var links = link.closest('ul').querySelectorAll('.nav-link');
            links.forEach(function (el) {
                el.classList.remove('active');
            });
            link.classList.add('active');
        }
    </script>
</body>

</html>
