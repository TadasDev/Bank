{% extends 'base.html.twig' %}

{% block title %}Login - InvestmentPro{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-12 col-sm-10 col-md-10 col-lg-3">
                <div class="card border-0 shadow-lg rounded-3">
                    <div class="card-header text-center border-0 bg-white pt-5 pb-2">
                        <h2 class="display-6 text-success fw-semibold mb-3">Welcome Back</h2>
                        <p class="text-muted fs-5 mb-0">Please login to access your account</p>
                    </div>
                    
                    <div class="card-body px-4 px-md-5 pb-5">
                        {% if error %}
                            <div class="alert alert-danger text-center fs-5 mb-4">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {{ form_start(login_form) }}
                        
                        <div class="mb-4">
                            {{ form_label(login_form.email, 'Email Address', {'label_attr': {'class': 'form-label fw-semibold mb-3 fs-5'}}) }}
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-envelope fs-4"></i>
                                </span>
                                {{ form_widget(login_form.email, {'attr': {'class': 'form-control border-start-0', 'placeholder': 'Enter your email'}}) }}
                            </div>
                            {{ form_errors(login_form.email) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(login_form.password, 'Password', {'label_attr': {'class': 'form-label fw-semibold mb-3 fs-5'}}) }}
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-lock fs-4"></i>
                                </span>
                                {{ form_widget(login_form.password, {'attr': {'class': 'form-control border-start-0', 'placeholder': 'Enter your password'}}) }}
                                <button class="btn btn-outline-secondary border-start-0" type="button" id="togglePassword">
                                    <i class="bi bi-eye fs-4"></i>
                                </button>
                            </div>
                            {{ form_errors(login_form.password) }}
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" style="width: 1.2em; height: 1.2em;" id="remember_me" name="_remember_me">
                                <label class="form-check-label fs-5 ms-2" for="remember_me">Remember me</label>
                            </div>
                            <a href="#" class="text-success text-decoration-none fs-5">Forgot password?</a>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-success btn-lg fs-5 py-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0 fs-5">Don't have an account? 
                                <a href="{{ path('app_security_register') }}" class="text-success text-decoration-none fw-semibold">Register</a>
                            </p>
                        </div>

                        {{ form_end(login_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.querySelector('input[type="password"]');
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
    </script>
{% endblock %}
