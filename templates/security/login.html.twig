{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Login</h1>

    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-body">  

          {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

             {{ form_start(login_form, { 'action': path('app_security_login'), 'method': 'POST' }) }}

            <div class="mb-3">
                {{ form_label(login_form.email) }}
                {{ form_widget(login_form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(login_form.password) }}
                {{ form_widget(login_form.password, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group text-end">
                <button type="submit" class="btn btn-primary w-25">Login</button>
            </div>

            {{ form_end(login_form) }}

        </div>
    </div>
</div>

{% endblock %}
